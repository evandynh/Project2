
<%= form_for @user do |f| %>
  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field form-group">
    <%= f.label :date_of_birth %>
    <%= f.date_field :dob %>
  </div>

  <div class="field form-group">
    <%= f.label :interests %>
    <%= f.text_field :description %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.label :picture %>
    <%= f.file_field :image%>
  </div> <br>
  <%= f.fields_for :skills do |ff| %>
    <%= render 'skill_fields', f: ff %>
  <% end %>
  <div>
    <%= link_to_add_association 'Add Skill', f, :skills %>
  </div>
  <div>
    <%= f.submit 'Done', class: 'btn btn-primary' %>
    <%= link_to 'Home', users_path, class: 'btn btn-primary' %>
  </div>
<% end %>
