<h2>Hello <%= current_user.name %> </h2>

<h1>New Message:</h1>
<%= form_for @message do |f| %>
  <div class='field form-group'>
    <% f.label :message %>
      <%= f.text_area :content, :rows => 5, :cols => 40 %>
    <%= f.submit 'Send', class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to 'Home', users_path, class: 'btn btn-primary' %>
